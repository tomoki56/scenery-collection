<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="image">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <div class="show frame">
          <% if @content.image? %>
            <%= image_tag @content.image.url %>
          <% else %>
            <%= image_tag 'noimage.gif' %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="content">
      <div class="panel panel-default">
        <table class="table table-bordered">
          <tr>
            <th>タイトル</th>
            <td><%= @content.title %></td>
          </tr>
          <tr>
            <th>ユーザー</th>
            <td><%= link_to @content.user.name, user_path(@content.user) %></td>
          </tr>
          <tr>
            <th>都道府県</th>
            <td><%= prefecture_name(@content.prefecture_id) %></td>
          </tr>
          <tr>
            <th>説明</th>
            <td><%= @content.description %></td>
          </tr>
        </table>
      </div>
    </div>
    <% if current_user?(@content.user) %>
      <div class="text-center text-muted">
      　<%= link_to '編集する', edit_content_path(@content), class: 'btn btn-primary' %>
  　　　<%= link_to '削除する', @content, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-default' %>
  　　</div>
　　<% end %>
  </div>
</div>
      