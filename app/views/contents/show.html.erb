<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="image">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="content">
      <div class="panel panel-default">
        <table class="table table-bordered">
          <tr>
            <th>タイトル</th>
            <td><%= @content.title %></td>
          </tr>
          <tr>
            <th>ユーザー</th>
            <td><%= @content.user_id %></td>
          </tr>
          <tr>
            <th>都道府県</th>
            <td><%= @content.prefecture_id %></td>
          </tr>
          <tr>
            <th>説明</th>
            <td><%= @content.description %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="text-center text-muted">
    　<p><%= link_to '編集する', edit_content_path(@content), class: 'btn btn-primary' %></p>
　　　<p><%= link_to '削除する', @content, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %></p>
　　</div>
  </div>
</div>
      