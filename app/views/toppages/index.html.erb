<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>風景を都道府県別に</h1>
          <% if unless logged_in? %>
            <%= link_to 'SCENERY COLLECTIONを始める', signup_path, class: 'btn btn-primary btn-lg' %>
          <% end %>
          <% else %>
            
            <input type="submit" name="commit" value="検索" class="btn btn-primary" >
          <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= render 'contents/contents', contents: @contents %>